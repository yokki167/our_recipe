<% @recipes.each do |recipe| %>
  <div class="content">
    <div class="content__left">
      <div class="content__left--image"></div>
    </div>
    <div class="content__right">
      <div class="content__right__top">
        <%= link_to recipe.title, recipe_path(recipe.id), class: "content__right__top--title" %>
      </div>
      <div class="content__right__bottom">
        <div class="content__right__bottom--userName">
          <%= link_to recipe.user.nickname, recipe_path(recipe.user), class: "content__right__bottom--userName--btn" %>
        </div>
        <div class="content__right__bottom--date">
          <%= recipe.created_at %>
        </div>
      </div>
    </div>
  </div>
<% end %>