<div class="content__title">
  レシピの入力
</div>



<%= form_with model: @recipe, class: :form, local: true do |form| %>

  <%= form.text_field :title, placeholder: :タイトル, class: :form__title %>
  <%= form.number_field :serving, placeholder: :人前, class: :form__serving %>
  <%= form.number_field :time, placeholder: :食べるまでの時間, class: :form__time %>
  <%= form.number_field :worktime, placeholder: :調理時間, class: :form__time %>
  <%= form.text_area :oneword, placeholder: :一言, class: :form__oneword %>
  <%= form.text_area :point, placeholder: :"Point!", class: :form__point %>
  <%= form.file_field :image %>



    <%= form.fields_for :recipelists do |recipelist| %>
      <%= render "recipelist_fields", f: recipelist %>
    <% end%>
    <div class="links">
      <%= link_to_add_association "add recipelist", form, :recipelists %>
    </div>

    

    <%= form.fields_for :ingredients do |ingredient| %>
      <%= render "ingredient_fields", f: ingredient %>
    <% end%>
    <div class="links">
      <%= link_to_add_association "add ingredient", form, :ingredients %>
    </div>
  
      <%= form.submit 'Save' %>
  
<% end %>
