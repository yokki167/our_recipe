<header class="header">
  <%= render 'recipes/header-nosearch'%>
</header>

<div class="devise-page">
  <div class="wrapper">
    <div class="heading">
      <h2>パスワードを忘れた方</h2>
    </div>
    <div class="devise-form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder: "email", class: "input-area" %>
          </div>
          <div class="actions">
            <%= f.submit "send", class: "submit-btn"  %>
          </div>
      <% end %>
      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

